<%= flash[:succes] %>

<h1>Editing Book</h1>
<!-- form_with部分 -->


  <% if @book.errors.any? %>
   <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
   <ul>
    <li>
     <% @book.errors.full_messages.each do |message| %>
     <%= message %>
    </li>
   </ul>
   <% end %>
  <% end %>


<%= form_with model:@book,local: true do |f| %>

 <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <label for="book_body">Body<label>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
   <%= f.submit 'Update Book' %>
 </div>


<br>
<span><%= link_to "Show",book_path(@book) %></span>
<span><%= link_to "Back",books_path %></span>
</br>

<% end %>
